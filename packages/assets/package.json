{
  "name": "@paraspell/assets",
  "version": "11.8.6",
  "description": "Assets for ParaSpell XCM/XCMP tool for developers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paraspell/xcm-tools.git",
    "directory": "packages/assets"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "rollup -c",
    "lint:check": "eslint src",
    "lint": "eslint --fix src",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "updateAssets": "node --loader ts-node/esm --experimental-specifier-resolution=node ./scripts/updateAssets.ts"
  },
  "dependencies": {
    "@paraspell/sdk-common": "workspace:*"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-attributes": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@codecov/rollup-plugin": "^1.9.1",
    "@polkadot/api": "^16.4.8",
    "@polkadot/types": "^16.4.8",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@snowbridge/registry": "^0.2.6",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "prettier": "^3.6.2",
    "rollup": "^4.52.3",
    "rollup-plugin-dts": "^6.2.3",
    "ts-node": "^10.9.2",
    "viem": "^2.37.9"
  }
}
