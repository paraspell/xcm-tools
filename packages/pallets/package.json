{
  "name": "@paraspell/pallets",
  "version": "12.8.0",
  "description": "Pallets for ParaSpell XCM/XCMP tool for developers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paraspell/xcm-tools.git",
    "directory": "packages/pallets"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "rollup -c",
    "lint:check": "eslint src",
    "lint": "eslint --fix src",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "updatePallets": "node --loader ts-node/esm --experimental-specifier-resolution=node ./scripts/updatePallets.ts"
  },
  "dependencies": {
    "@paraspell/sdk-common": "workspace:*"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-attributes": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@codecov/rollup-plugin": "^1.9.1",
    "@polkadot/api": "^16.5.4",
    "@polkadot/types": "^16.5.4",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "axios": "^1.13.4",
    "dotenv": "^17.2.3",
    "rollup": "^4.57.0",
    "rollup-plugin-dts": "^6.3.0",
    "ts-node": "^10.9.2"
  }
}
