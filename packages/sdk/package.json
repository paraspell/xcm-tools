{
  "name": "@paraspell/sdk",
  "version": "12.7.1",
  "description": "SDK for ParaSpell XCM/XCMP tool for developers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paraspell/xcm-tools.git",
    "directory": "packages/sdk"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "rollup -c",
    "lint:check": "eslint src",
    "lint": "eslint --fix src",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "runAll": "pnpm compile && pnpm format:write && pnpm lint && pnpm test",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts --sequence.concurrent",
    "test:e2e:chopsticks": "vitest run --config ./vitest.config.chopsticks.e2e.ts"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@polkadot-api/legacy-provider": "^0.3.8",
    "@paraspell/sdk-core": "workspace:*",
    "@polkadot-labs/hdkd": "^0.0.26",
    "@polkadot-labs/hdkd-helpers": "^0.0.27",
    "viem": "2.45.0"
  },
  "peerDependencies": {
    "polkadot-api": ">= 1.23.3 < 2"
  },
  "devDependencies": {
    "@acala-network/chopsticks": "^1.2.5",
    "@babel/plugin-syntax-import-attributes": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@codecov/rollup-plugin": "^1.9.1",
    "@noble/curves": "^2.0.1",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "axios": "^1.13.4",
    "dotenv": "^17.2.3",
    "rollup": "^4.57.0",
    "rollup-plugin-dts": "^6.3.0",
    "tslib": "^2.8.1"
  }
}
