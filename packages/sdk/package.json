{
  "name": "@paraspell/sdk",
  "version": "8.8.0",
  "description": "SDK for ParaSpell XCM/XCMP tool for developers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paraspell/xcm-tools.git",
    "directory": "packages/sdk"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "rollup -c",
    "lint:check": "eslint src",
    "lint": "eslint --fix .",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "runAll": "pnpm compile && pnpm format:write && pnpm lint && pnpm test",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts --sequence.concurrent"
  },
  "dependencies": {
    "@paraspell/sdk-core": "workspace:*",
    "ethers": "^6.13.5",
    "viem": "^2.23.5",
    "@noble/hashes": "^1.7.1"
  },
  "peerDependencies": {
    "polkadot-api": ">= 1.9.3 < 2"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-attributes": "^7.26.0",
    "@babel/preset-env": "^7.26.9",
    "@codecov/rollup-plugin": "^1.9.0",
    "@noble/curves": "^1.8.1",
    "@polkadot-labs/hdkd": "^0.0.12",
    "@polkadot-labs/hdkd-helpers": "^0.0.12",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@scure/bip32": "^1.6.2",
    "@scure/bip39": "^1.5.4",
    "@vitest/coverage-v8": "^3.0.7",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "prettier": "^3.5.2",
    "rollup": "^4.34.8",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1"
  }
}
