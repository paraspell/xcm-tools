{
  "name": "@paraspell/sdk-core",
  "version": "12.7.1",
  "description": "SDK core for ParaSpell XCM/XCMP tool for developers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paraspell/xcm-tools.git",
    "directory": "packages/sdk-core"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "rollup -c",
    "lint:check": "eslint src",
    "lint": "eslint --fix src",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "updateChainConfigs": "node --loader ts-node/esm --experimental-specifier-resolution=node ./scripts/fetchChainConfigs.ts",
    "runAll": "pnpm compile && pnpm format:write && pnpm lint && pnpm test"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@paraspell/assets": "workspace:*",
    "@paraspell/pallets": "workspace:*",
    "@paraspell/sdk-common": "workspace:*",
    "@scure/base": "^2.0.0",
    "viem": "2.45.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-attributes": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@codecov/rollup-plugin": "^1.9.1",
    "@polkadot/api": "^16.5.4",
    "@polkadot/types": "^16.5.4",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "axios": "^1.13.4",
    "dotenv": "^17.2.3",
    "rollup": "^4.57.0",
    "rollup-plugin-dts": "^6.3.0",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1"
  }
}
