{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021", "ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src", "vitest.config.ts", "e2e"]
}
