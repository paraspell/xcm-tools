{
  "name": "@paraspell/sdk-pjs",
  "version": "12.7.1",
  "description": "Polkadot.js based SDK for ParaSpell XCM/XCMP tool for developers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paraspell/xcm-tools.git",
    "directory": "packages/sdk-pjs"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "rollup -c",
    "lint:check": "eslint src",
    "lint": "eslint --fix src",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "runAll": "pnpm compile && pnpm format:write && pnpm lint && pnpm test",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts --sequence.concurrent"
  },
  "dependencies": {
    "@paraspell/sdk-core": "workspace:*",
    "@snowbridge/api": "0.3.2",
    "@snowbridge/base-types": "^0.3.2",
    "@snowbridge/contract-types": "0.3.2",
    "@snowbridge/registry": "^0.3.2",
    "ethers": "6.15.0",
    "viem": "2.45.0"
  },
  "peerDependencies": {
    "@polkadot/api": ">= 16.0 < 17",
    "@polkadot/api-base": ">= 16.0 < 17",
    "@polkadot/types": ">= 16.0 < 17",
    "@polkadot/util": ">= 14",
    "@polkadot/util-crypto": ">= 14"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-attributes": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@codecov/rollup-plugin": "^1.9.1",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "axios": "^1.13.4",
    "dotenv": "^17.2.3",
    "rollup": "^4.57.0",
    "rollup-plugin-dts": "^6.3.0",
    "tslib": "^2.8.1"
  }
}
