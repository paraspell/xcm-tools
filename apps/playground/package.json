{
  "name": "@paraspell/playground",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "compile": "tsc",
    "preview": "vite preview",
    "lint:check": "eslint src",
    "lint": "eslint --fix src",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test:e2e": "playwright test",
    "install-polkadot-ext": "cd e2e/extensions/polkadot-ext && yarn && yarn build:chrome",
    "init-polkadot-ext": "git clone https://github.com/polkadot-js/extension e2e/extensions/polkadot-ext && pnpm install-polkadot-ext",
    "init-metamask-ext": "mkdir -p e2e/extensions/metamask-ext/ && cd e2e/extensions/metamask-ext && curl -L -o metamask.zip https://github.com/MetaMask/metamask-extension/releases/download/v12.2.4/metamask-chrome-12.2.4.zip && unzip metamask.zip",
    "init-e2e": "pnpm init-polkadot-ext && pnpm init-metamask-ext"
  },
  "dependencies": {
    "@mantine/code-highlight": "^7.17.5",
    "@mantine/core": "^7.17.5",
    "@mantine/form": "^7.17.5",
    "@mantine/hooks": "^7.17.5",
    "@mantine/notifications": "^7.17.5",
    "@mantinex/dev-icons": "^2.0.0",
    "@paraspell/sdk": "workspace:*",
    "@paraspell/sdk-pjs": "workspace:*",
    "@paraspell/xcm-analyser": "workspace:*",
    "@paraspell/xcm-router": "workspace:*",
    "@polkadot/api": "^15.9.2",
    "@polkadot/apps-config": "^0.154.1",
    "@polkadot/extension-dapp": "^0.58.8",
    "@polkadot/extension-inject": "^0.58.8",
    "@polkadot/keyring": "^13.4.4",
    "@polkadot/util": "^13.4.4",
    "@polkadot/util-crypto": "^13.4.4",
    "@tabler/icons-react": "^3.31.0",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "ethers": "^6.13.7",
    "polkadot-api": "^1.10.0",
    "react": "^19.1.0",
    "react-confetti": "^6.4.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.3",
    "viem": "^2.28.1",
    "web3": "^4.16.0",
    "web3-validator": "^2.0.6"
  },
  "devDependencies": {
    "@metamask/providers": "^22.1.0",
    "@playwright/test": "^1.52.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "path": "^0.12.7",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "url": "^0.11.4",
    "vite": "^6.3.4",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-wasm": "^3.4.1"
  }
}
